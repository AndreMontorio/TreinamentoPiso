@model IEnumerable<GestaoComercioPISO.WebSite.Models.Cliente>

@{
    ViewBag.Title = "Lista Clientes";
}

<h2>Lista Clientes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeCompletoRazaoSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApelidoNomeFantasia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPFCNPJ)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeCompletoRazaoSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApelidoNomeFantasia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPFCNPJ)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
